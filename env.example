# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8001

# Security
ALLOWED_HOSTS=*
ALLOWED_ORIGINS=*

# JWT Settings (CHANGE THESE IN PRODUCTION!)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
